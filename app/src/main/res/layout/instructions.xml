<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.hermesinnovationlab.hermesplay.ui.MainActivity"
    android:background="#000">

    <View
        android:id="@+id/background_black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_black"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textHowTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/hermesArButton"
        android:layout_marginStart="26dp"
        android:text="How to view your HermesPlay video"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textHowTo"
        android:layout_marginTop="146dp"
        android:text="1. Scan the 2D barcode on \n     the label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textHowTo"
        android:layout_marginTop="261dp"
        android:text="2. Point your phone at the AR \n     graphic on the label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textHowTo"
        android:layout_marginBottom="195dp"
        android:text="3. Use the controls to switch \n     between fullscreen and AR"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/image2dBarcode"
        android:layout_width="121dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/win" />


    <ImageView
        android:id="@+id/imageVumark"
        android:layout_width="119dp"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image2dBarcode"
        android:layout_marginTop="248dp"
        android:src="@drawable/vumark" />

    <Button
        android:id="@+id/fullscreenButtonStub"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="23dp"
        android:background="@drawable/fullscreen_button"
        android:fontFamily="sans-serif-light"
        android:text="   View Fullscreen   "
        android:textColor="#FFF"
        android:textSize="12dp" />


    <Button
        android:id="@+id/hermesArButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/buttonbg"
        android:fontFamily="sans-serif-light"
        android:text="X"
        android:textColor="#0098cd"
        android:textSize="18dp" />

</RelativeLayout>
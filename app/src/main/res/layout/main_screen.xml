<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.hermesinnovationlab.hermesplay.ui.MainActivity"
    android:background="#000">

    <!--The camera feed would be visible below this help screen.-->
    <ImageView
        android:id="@+id/cameraFeed"
        android:layout_width="match_parent"
        android:layout_height="665dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/camera_feed" />

    <View
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background" />

    <View
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/content" />

    <Button
        android:id="@+id/crossButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textToView"
        android:layout_alignEnd="@+id/fullscreenButtonStub"
        android:background="@drawable/cross_button"
        android:fontFamily="sans-serif-light"
        android:text="X"
        android:textColor="#000"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView3"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hermesArButton"
        android:layout_marginTop="15dp"
        android:src="@drawable/hplogo" />

    <TextView
        android:id="@+id/textToView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="131dp"
        android:text="To view your video"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="233dp"
        android:text="1. Scan the 2D barcode on \n     the label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="300dp"
        android:text="2. Point your phone at the AR \n     graphic on the label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/hermesArButton"
        android:layout_marginBottom="187dp"
        android:text="3. Use the controls to switch \n     between fullscreen and AR"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/image2dBarcode"
        android:layout_width="121dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageVumark"
        android:layout_marginTop="211dp"
        android:src="@drawable/win" />


    <ImageView
        android:id="@+id/imageVumark"
        android:layout_width="119dp"
        android:layout_height="71dp"
        android:layout_alignEnd="@+id/hermesArButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="285dp"
        android:src="@drawable/vumark" />

    <Button
        android:id="@+id/fullscreenButtonStub"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/text3"
        android:layout_marginEnd="26dp"
        android:background="@drawable/fullscreen_button"
        android:fontFamily="sans-serif-light"
        android:text="   View Fullscreen   "
        android:textColor="#FFF"
        android:textSize="12dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Got it!"
        android:id="@+id/hermesArButton"
        android:background="@drawable/buttonbg"
        android:textColor="#0098cd"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        android:fontFamily="sans-serif-light"
        android:layout_alignTop="@+id/content"
        android:layout_centerHorizontal="true" />

</RelativeLayout>